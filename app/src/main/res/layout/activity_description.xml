<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/image_rectangle1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="0dp"
        android:scaleType="centerInside"
        android:background="@drawable/us_and_them" />

    <Button
        android:id="@+id/ic_previous_ltr"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/back"
        tools:ignore="SpeakableTextPresentCheck"
        android:scaleType="centerInside" />

    <Button
        android:id="@+id/button_bat_dau_xem"
        android:layout_width="71.34dp"
        android:layout_height="77.24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="133.17dp"
        android:layout_marginBottom="740.59dp"
        android:scaleType="centerInside"
        android:background="@drawable/nut_bat_dau_xem"
        tools:ignore="SpeakableTextPresentCheck"/>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="0.24dp"
        android:layout_marginTop="450dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:background="\@drawable/ngan_cach" />

    <ImageView
        android:id="@+id/image_vector1"
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="570dp"
        android:scaleType="centerInside"
        android:background="@drawable/ngan_cach" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="360dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:background="@drawable/ngan_cach" />

    <FrameLayout
        android:id="@+id/container_group1"
        android:layout_width="125.26dp"
        android:layout_height="55.4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="370dp"
        android:layout_gravity="left">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="20.48dp"
            android:layout_gravity="left"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="34.93dp"
            android:layout_marginBottom="0dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="28/4/2022"
            android:textColor="#FF000000"
            android:textSize="14.45dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/text_publish"
            android:layout_width="114.42dp"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-2.26dp"
            android:layout_marginBottom="-2.26dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:fontFamily="@font/roboto_condensed_bold"
            android:singleLine="true"
            android:text="Phát hành"
            android:textColor="#FF000000"
            android:textSize="19.27dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_phim_de_xuat"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="580dp"
        android:layout_marginBottom="-1dp"
        android:layout_gravity="top|left"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Phim đề xuất"
        android:textColor="#FF000000"
        android:textSize="19.27dp" />

    <FrameLayout
        android:id="@+id/container_group6"
        android:layout_width="196dp"
        android:layout_height="66.61dp"
        android:layout_marginLeft="140dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="370dp">

        <FrameLayout
            android:id="@+id/container_group7"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|left">

            <ImageView
                android:id="@+id/box_the_loai_1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_the_loai1"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/text_the_loai_1"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:singleLine="true"
                android:text="Chính kịch"
                android:textColor="#FF000000"
                android:textSize="14.45dp"
                tools:ignore="TextSizeCheck" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/the_loai_2"
            android:layout_width="97.68dp"
            android:layout_height="30.17dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="0.28dp">

            <ImageView
                android:id="@+id/box_the_loai_2"
                android:layout_width="match_parent"
                android:layout_height="30.17dp"
                android:background="@drawable/bg_the_laoi2"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/text_text_the_loai_2"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Lãng mạn"
                android:textColor="#FF000000"
                android:textSize="14.45dp"
                tools:ignore="TextSizeCheck" />
        </FrameLayout>

        <TextView
            android:id="@+id/text_the_loai"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="57.61dp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="-1dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Thể loại"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textColor="#FF000000"
            android:textSize="19.27dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_group9"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="460dp"
        android:layout_gravity="top|left">

        <TextView
            android:id="@+id/text_summary"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="-1dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Tóm tắt"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textColor="#FF000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:lineHeight="21.68dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Mười năm trước, trên chuyến tàu về nhà trong dịp du xuân bận rộn, định mệnh đã đưa Xiaoxiao và Jianqing đến với nhau.  Read more..."
            android:textColor="#000000"
            android:textSize="16dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_group2"
        android:layout_width="105.9dp"
        android:layout_height="20dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/text_duration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_condensed_regular"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="120 phút"
            android:textColor="#FF000000"
            android:textSize="14.45dp"
            tools:ignore="TextSizeCheck" />

    </FrameLayout>

    <TextView
        android:id="@+id/tua_de_phim"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="300dp"
        android:layout_gravity="top|left"
        android:alpha="0.75"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Chúng Ta Của Sau Này"
        android:textColor="#FF000000"
        android:textSize="24dp" />

    <FrameLayout
        android:id="@+id/phim_de_xuat"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="610dp"
        android:layout_gravity="top|left"
        android:background="@drawable/group_de_xuat">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="top|left">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_dexuat"
                android:scaleType="centerCrop" />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="9dp"
                app:cardElevation="2dp">
                <ImageView
                    android:id="@+id/de_xuat_1"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:layout_gravity="top"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ninh_an_de_xuat" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_thong_tin_phim_de_xuat_1"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_gravity="left"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="9dp"
                android:alpha="0.75"
                android:fontFamily="@font/roboto_condensed_regular"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="2024 | 24/24 tập | Trung Quốc"
                android:textColor="#FF000000"
                android:textSize="11sp"
                tools:ignore="TextSizeCheck" />
            <TextView
                android:id="@+id/text_ten_phim_de_xuat_1"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="134dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:layout_marginBottom="33dp"
                android:layout_gravity="left"
                android:alpha="0.65"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Ninh An Như Mộng - Tập 1"
                android:textColor="#FF000000"
                android:textSize="12sp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="top|left">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_dexuat"
                android:scaleType="centerCrop" />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="9dp"
                app:cardElevation="2dp">
                <ImageView
                    android:id="@+id/de_xuat_2"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:layout_gravity="top"
                    android:scaleType="centerCrop"
                    android:src="@drawable/queen_de_xuat" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_thong_tin_phim_de_xuat_2"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_gravity="left"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="9dp"
                android:alpha="0.75"
                android:fontFamily="@font/roboto_condensed_regular"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="2024 | 8/16 tập | Hàn Quốc"
                android:textColor="#FF000000"
                android:textSize="11sp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/text_ten_phim_de_xuat_2"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="134dp"
                android:layout_marginBottom="33dp"
                android:alpha="0.65"
                android:fontFamily="@font/roboto_condensed_bold"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Queen Of Tears - Tập 1"
                android:textColor="#FF000000"
                android:textSize="12sp"
                tools:ignore="TextSizeCheck" />
        </FrameLayout>

    </FrameLayout>
</FrameLayout>
