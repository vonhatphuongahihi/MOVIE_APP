<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragment_watch_film">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/player"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_gravity="top|left"
                android:layout_marginTop="0dp"
                android:background="@android:color/black"
                app:controller_layout_id="@layout/custom_controller"
                app:player_layout_id="@layout/exo_player_view"
                app:use_controller="true" />

            <ProgressBar
                android:id="@id/progress_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="100dp" />

            <TextView
                android:id="@+id/text_ten_phim"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="240dp"
                android:alpha="0.75"
                android:fontFamily="@font/roboto_condensed_bold"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Khanh Khanh Nhật Thường - Tập 1"
                android:textColor="@color/primary_text"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/text_thong_tin_phim"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="270dp"
                android:alpha="0.75"
                android:fontFamily="@font/roboto_condensed_bold"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="2024 | 24/24 tập | Trung Quốc"
                android:textColor="@color/primary_text"
                android:textSize="14sp"
                tools:ignore="TextSizeCheck" />

            <FrameLayout
                android:id="@+id/chuc_nang_them"
                android:layout_width="184dp"
                android:layout_height="52dp"
                android:layout_gravity="top|left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="321dp">

                <ImageView
                    android:id="@+id/rate"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="139dp"
                    android:layout_marginRight="11dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/rate_icon" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/share_icon" />

                <ImageView
                    android:id="@+id/favorite"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/favorite_watch_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="37dp"
                    android:alpha="0.75"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Yêu thích"
                    android:textColor="@color/primary_text"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="37dp"
                    android:alpha="0.75"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Chia sẻ"
                    android:textColor="@color/primary_text"
                    android:textSize="11sp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginLeft="133dp"
                    android:layout_marginTop="37dp"
                    android:alpha="0.75"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Đánh giá"
                    android:textColor="@color/primary_text"
                    android:textSize="11sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="640dp"
                android:layout_marginRight="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="top|left"
                    android:layout_marginTop="-1dp"
                    android:layout_marginBottom="-1dp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Bình luận"
                    android:textColor="@color/primary_text"
                    android:textSize="18dp" />

                <FrameLayout
                    android:id="@+id/chi_tiet_binh_luan_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="37dp"
                    android:layout_marginBottom="3dp">


                    <GridView
                        android:id="@+id/comment_gridview"
                        android:layout_width="match_parent"
                        android:layout_height="310dp"
                        android:layout_marginTop="0dp"
                        android:verticalSpacing="10dp">

                    </GridView>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="350dp">

                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp">

                <TextView

                    android:id="@+id/text_phim_de_xuat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="22dp"
                    android:alpha="0.75"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Phim đề xuất"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp"
                    tools:ignore="TextSizeCheck" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewRecommendedMovies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" />
            </FrameLayout>

        </FrameLayout>
    </ScrollView>


</RelativeLayout>
