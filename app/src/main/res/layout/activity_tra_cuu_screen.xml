<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tra_cuu_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    tools:context=".Activities.TraCuuScreen">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tra_cuu_guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tra_cuu_guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <ImageView
        android:id="@+id/bo_loc_ten_phim"
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:scaleType="fitXY"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/ten_phim_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bo_loc_ten_phim_1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/khung_tra_cuu"
        android:fontFamily="@font/roboto_condensed_regular"
        android:hint="Nhập tên phim"
        android:paddingStart="10dp"
        android:textColor="#221A92"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/tra_cuu_guideline_2"
        app:layout_constraintStart_toStartOf="@id/tra_cuu_guideline_1"
        app:layout_constraintTop_toBottomOf="@id/bo_loc_ten_phim" />

    <ImageView
        android:id="@+id/bo_loc_the_loai"
        android:layout_width="55dp"
        android:layout_height="18dp"
        android:scaleType="fitXY"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/the_loai_text"
        app:layout_constraintTop_toBottomOf="@id/bo_loc_ten_phim_1"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/bo_loc_the_loai_1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/khung_tra_cuu"
        android:fontFamily="@font/roboto_condensed_regular"
        android:textSize="16sp"
        android:paddingStart="15dp"
        android:textColor="#221A92"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@id/tra_cuu_guideline_2"
        app:layout_constraintTop_toBottomOf="@id/bo_loc_the_loai"
        app:layout_constraintStart_toStartOf="@id/tra_cuu_guideline_1" />

    <ImageView
        android:id="@+id/bo_loc_quoc_gia"
        android:layout_width="55dp"
        android:layout_height="18dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/quoc_gia_text"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/bo_loc_the_loai_1"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/bo_loc_quoc_gia_1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/khung_tra_cuu"
        android:fontFamily="@font/roboto_condensed_regular"
        android:hint="Nhập tên môn học"
        android:textSize="16sp"
        android:paddingStart="15dp"
        android:textColor="#221A92"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="@id/tra_cuu_guideline_2"
        app:layout_constraintTop_toBottomOf="@id/bo_loc_quoc_gia"
        app:layout_constraintStart_toStartOf="@id/tra_cuu_guideline_1" />

    <ImageView
        android:id="@+id/bo_loc_dao_dien"
        android:layout_width="62dp"
        android:layout_height="18dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/dao_dien_text"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/bo_loc_quoc_gia_1"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/bo_loc_dao_dien_1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/khung_tra_cuu"
        android:fontFamily="@font/roboto_condensed_regular"
        android:hint="Nhập tên đạo diễn"
        android:paddingStart="15dp"
        android:textColor="#221A92"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/tra_cuu_guideline_2"
        app:layout_constraintTop_toBottomOf="@id/bo_loc_dao_dien"
        app:layout_constraintStart_toStartOf="@id/tra_cuu_guideline_1" />

    <ImageView
        android:id="@+id/bo_loc_dien_vien"
        android:layout_width="55dp"
        android:layout_height="18dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/dien_vien_text"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/bo_loc_dao_dien_1"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/bo_loc_dien_vien_1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/khung_tra_cuu"
        android:fontFamily="@font/roboto_condensed_regular"
        android:hint="Nhập tên diễn viên"
        android:paddingStart="15dp"
        android:textColor="#221A92"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/bo_loc_dien_vien"
        app:layout_constraintStart_toStartOf="@id/tra_cuu_guideline_1"
        app:layout_constraintEnd_toEndOf="@id/tra_cuu_guideline_2" />

    <ImageButton
        android:id="@+id/bo_loc_button_tra_cuu"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bo_loc_dien_vien_1"
        app:srcCompat="@drawable/button_tra_cuu"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
