<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_verification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:ignore="ExtraText">

    <ImageView
        android:layout_width="256dp"
        android:layout_height="238dp"
        android:layout_marginTop="230dp"
        android:scaleType="centerInside"
        android:layout_gravity="center|top"
        android:src="@drawable/anh_dt_xacnhan" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="670dp"
      >

        <Button
            android:id="@+id/xac_thuc_otp_button"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/button_verify_otp"
            android:textColor="#FFFFFFFF"
            android:textSize="18dp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_group"
        android:layout_width="320dp"
        android:layout_height="87dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="top|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="-1dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:fontFamily="@font/roboto_condensed_bold"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Xác minh mã"
            android:textColor="#120082"
            android:textSize="27sp" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="36dp"
            android:layout_marginTop="51dp"
            android:alpha="0.800000011920929"
            android:fontFamily="@font/roboto_condensed_regular"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:lineHeight="20dp"
            android:text="Mã đã được gửi về số điện thoại của bạn. Hãy nhập mã trong vòng 5 phút."
            android:textColor="#120082"
            android:textSize="16dp" />
    </FrameLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="500dp"
            android:layout_gravity="top"
            android:fontFamily="@font/roboto_condensed_regular"
            android:layout_height="21dp"
            android:layout_marginLeft="51dp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Chưa nhận được mã?"
            android:textColor="#120082"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_gui_lai_ma"
            android:layout_marginTop="498.5dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="205dp"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/roboto_condensed_bold"
            android:gravity="center_vertical"
            android:text="Gửi lại mã"
            android:textColor="#120082"
            android:textSize="16sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="540dp"
        android:layout_height="60dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/otp_input_1"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:textColor="#2F6BFE"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:id="@+id/otp_input_2"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="#2F6BFE"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:id="@+id/otp_input_3"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#2F6BFE"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:id="@+id/otp_input_4"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:textColor="#2F6BFE"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />
            <EditText
                android:id="@+id/otp_input_5"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#2F6BFE"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                tools:ignore="LabelFor" />
            <EditText
                android:id="@+id/otp_input_6"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#2F6BFE"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold"
                tools:ignore="LabelFor" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
