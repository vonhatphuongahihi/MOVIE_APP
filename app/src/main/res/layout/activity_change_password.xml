<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Đổi mật khẩu"
        android:textColor="#FF000000"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textSize="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:includeFontPadding="false"
        android:lineHeight="20dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="Nhập mật khẩu mới có ít nhất 8 ký tự"
        android:textColor="#FF000000"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:src="@drawable/user_icon_new" />
    <FrameLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="360dp"
        android:layout_marginBottom="241dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginBottom="99dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Nhập mật khẩu mới"
            android:textColor="#FF000000"
            android:fontFamily="@font/roboto_condensed_medium"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edittext_nhap_lai_mat_khau"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/khung_nhap_sdt"
            android:hint="  ********"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="18dp"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="90dp"
            android:gravity="left"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Nhập lại mật khẩu"
            android:textColor="#FF000000"
            android:fontFamily="@font/roboto_condensed_medium"
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/edittext_nhap_mat_khau_moi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/khung_nhap_sdt"
            android:hint="  ********"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="18dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </FrameLayout>

    <Button
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="600dp"
        android:background="@drawable/button_set_pass"/>
</FrameLayout>
