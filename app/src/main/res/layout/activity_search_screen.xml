<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="top|center_horizontal">
        <FrameLayout
            android:layout_width="295dp"
            android:layout_height="match_parent"
            android:background="@drawable/khung_tim_kiem">
            <LinearLayout
                android:id="@+id/search_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/search_icon" />

                <EditText
                    android:id="@+id/tim_kiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:hint="Tìm kiếm"
                    android:textColorHint="#221A92"
                    android:inputType="text"
                    android:textColor="#221A92"
                    android:textSize="16sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

        </FrameLayout>
        <ImageView
            android:id="@+id/home_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="-15dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/loc_tim_kiem" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/recent_search_list"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:layout_gravity="top|left"
        android:gravity="left|top"
        android:orientation="vertical"
        android:paddingBottom="8dp">
        <TextView
            android:layout_width="336dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="@font/roboto_condensed_medium"
            android:text="Tìm kiếm gần đây"
            android:textColor="#221A92"
            android:textSize="16dp" />
        <LinearLayout
            android:id="@+id/tim_kiem_gan_day_1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/text_recent_search_1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Dữ Phượng Hành"
                android:textColor="#221A92"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />
            <ImageView
                android:id="@+id/delete_1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/delete_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tim_kiem_gan_day_2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/text_recent_search_2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Khanh Khanh Nhật Thường"
                android:textColor="#221A92"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />
            <ImageView
                android:id="@+id/delete_2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/delete_icon" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tim_kiem_gan_day_3"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/text_recent_search_3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Queen Of Tears"
                android:textColor="#221A92"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />
            <ImageView
                android:id="@+id/delete_3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/delete_icon" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tim_kiem_gan_day_4"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/text_recent_search_4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Trần Tình Lệnh"
                android:textColor="#221A92"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />
            <ImageView
                android:id="@+id/delete_4"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/delete_icon" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="325dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:fontFamily="@font/roboto_condensed_medium"
        android:text="Xu hướng gần đây"
        android:textColor="#221A92"
        android:textSize="16dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_trend"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="360dp"
        android:layout_gravity="top|left"
        android:background="@drawable/group_trend"/>

</FrameLayout>

