<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <ImageView
        android:id="@+id/thong_bao"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="top|right"
        android:scaleType="centerInside"
        android:src="@drawable/thong_bao_icon" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/user_image"
        />
    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="-2dp"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="VÕ NHẤT PHƯƠNG"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textColor="#FF221FC2"
        android:textSize="21dp" />
    <FrameLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/chinh_sua_thong_tin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/khung"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="9dp">
            <TextView
                android:id="@+id/text_chinh_sua_thong_tin"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Chỉnh sửa thông tin"
                android:textColor="#FF31507F"
                android:fontFamily="@font/roboto_condensed_medium"
                android:textSize="16dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/user_icon_1" />
            <ImageView
                android:id="@+id/click_chuyen_huong_1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/chuyen_huong_icon" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/che_do_toi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/khung"
            android:clipToPadding="false"
            android:layout_marginTop="60dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="9dp">
            <TextView
                android:id="@+id/text_che_do_toi"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Chế độ tối"
                android:textColor="#FF31507F"
                android:textSize="16dp"
                android:fontFamily="@font/roboto_condensed_medium"/>
            <View
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="29.09dp"
                android:scaleType="centerInside"
                android:src="@drawable/thanh_ngan" />
            <FrameLayout
                android:id="@+id/tat_bat_che_do_toi"
                android:layout_width="44dp"
                android:layout_height="23dp"
                android:layout_marginLeft="9dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/che_do_toi_icon">
                    <ImageView
                        android:layout_width="40.05dp"
                        android:layout_height="23.1dp"
                        android:background="@drawable/che_doi_toi_icon_1"
                        android:scaleType="centerInside" />
                </FrameLayout>
                <ImageView
                    android:layout_width="20.02dp"
                    android:layout_height="20.02dp"
                    android:layout_marginLeft="6.16dp"
                    android:layout_marginRight="18.48dp"
                    android:layout_marginTop="1.54dp"
                    android:layout_marginBottom="1.54dp"
                    android:background="@drawable/che_do_toi_icon_2"
                    android:scaleType="centerInside" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/quyen_rieng_tu"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/khung"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:layout_marginTop="120dp"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="9dp">
            <TextView
                android:id="@+id/text_quyen_rieng_tu"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Quyền riêng tư"
                android:textColor="#FF31507F"
                android:fontFamily="@font/roboto_condensed_medium"
                android:textSize="16dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:scaleType="centerInside"
                android:src="@drawable/quyen_rieng_tu_icon" />
            <ImageView
                android:id="@+id/click_chuyen_huong_2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/chuyen_huong_icon" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lich_su_xem"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/khung"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="180dp"
            android:paddingBottom="9dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="9dp">
            <TextView
                android:id="@+id/text_lich_su_xem"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Lịch sử xem"
                android:textColor="#FF31507F"
                android:fontFamily="@font/roboto_condensed_medium"
                android:textSize="16dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerInside"
                android:src="@drawable/lich_su_icon" />
            <ImageView
                android:id="@+id/click_chuyen_huong_3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/chuyen_huong_icon" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dang_xuat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/khung"
            android:clipToPadding="false"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="240dp"
            android:paddingBottom="9dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="9dp">
            <TextView
                android:id="@+id/text_dang_xuat"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Đăng xuất"
                android:textColor="#FF31507F"
                android:fontFamily="@font/roboto_condensed_medium"
                android:textSize="16dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/dang_xuat_icon" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>


