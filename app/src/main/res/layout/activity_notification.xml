<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:onClick="back"
        android:background="@drawable/back"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông báo"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textSize="28sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:id="@+id/notification_list_today"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hôm nay"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textSize="20sp"
        android:layout_gravity="left"
        android:id="@+id/today"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cảm động hay cảm lạnh"
            android:fontFamily="@font/roboto_condensed_medium"
            android:textSize="16sp"
            android:layout_gravity="left"
            android:layout_marginTop="45dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 giờ trước"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="16sp"
            android:layout_gravity="left"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="45dp"
            android:alpha="0.4"
            />
        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Được bạn trai giàu có cầu hôn “hoành tráng” sau ba năm hẹn hò, Thừa Hoan có quyết định lên xe hoa?"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:layout_marginTop="75dp"
            android:lineSpacingExtra="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dữ Phượng Hành | Tập mới nhất"
            android:fontFamily="@font/roboto_condensed_medium"
            android:textSize="16sp"
            android:layout_gravity="left"
            android:layout_marginTop="130dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 giờ trước"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="16sp"
            android:layout_gravity="left"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="130dp"
            android:alpha="0.4"
            />
        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Thần quân Hành Chỉ sẽ làm gì để cứu được Thẩm Ly?"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:layout_marginTop="160dp"
            android:lineSpacingExtra="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21h00 | Queen Of Tears"
            android:fontFamily="@font/roboto_condensed_medium"
            android:textSize="16sp"
            android:layout_gravity="left"
            android:layout_marginTop="190dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 giờ trước"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="16sp"
            android:layout_gravity="left"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="190dp"
            android:alpha="0.4"
            />
        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="“Queen Of Tears” cán mốc rating 20.7%, vượt qua “Goblin” trở thành drama có rating cao thứ hai trong lịch sử đài tvN. Chỉ còn cách kỉ lục của “Crash Landing of You” đúng 1%."
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:layout_marginTop="220dp"
            android:lineSpacingExtra="5dp"
            />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/notification_list_yesterday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="440dp">

        <TextView
            android:id="@+id/yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="Hôm qua"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/roboto_condensed_medium"
            android:text="Trường Phong Độ"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="45dp"
            android:alpha="0.4"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="8 giờ trước"
            android:textSize="16sp" />

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:lineSpacingExtra="5dp"
            android:text="Chu Diệp lên ngôi hoàng đế, chính thức kết thúc chặng đường 40 tập của Trường Phong Độ."
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/roboto_condensed_medium"
            android:text="Khanh Khanh Nhật Thường | Tóm tắt"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="130dp"
            android:alpha="0.4"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="12 giờ trước"
            android:textSize="16sp" />

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:lineSpacingExtra="5dp"
            android:text="Lục thiếu chủ Doãn Tranh của Tân Xuyên là người giấu tài. Còn cô gái nhỏ Lý Vi chỉ muốn sống an nhàn ở quê, luôn nỗ lực để được rớt tuyển, nhưng lại ngoài ý muốn kết duyên cùng Doãn Tranh.
Cả hai cùng nhau mở ra một cuộc hôn nhân thú vị và đầy bất ngờ."
            android:textSize="15sp" />
    </FrameLayout>
</FrameLayout>