<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/background">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/phim_hot_2"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="top|left"
                        android:scaleType="centerInside"
                        android:src="@drawable/tien_kiem_4_home" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.5"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="108dp"
                        android:textColor="#FF000000"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:textSize="16dp"/>

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="130dp"
                        android:background="@drawable/new_star"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:background="@drawable/khung_ten_phim_home"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/text_tien_kiem_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:includeFontPadding="false"
                        android:lineHeight="16dp"
                        android:text="Tiên Kiếm 4"
                        android:textColor="#FF000000"
                        android:textSize="13dp" />
                </FrameLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="top|left"
                        android:scaleType="centerInside"
                        android:src="@drawable/khanh_khanh_home_1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.5"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="108dp"
                        android:textColor="#FF000000"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:textSize="16dp"/>

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="130dp"
                        android:background="@drawable/new_star"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:background="@drawable/khung_ten_phim_home"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:includeFontPadding="false"
                        android:lineHeight="16dp"
                        android:text="Khanh khanh nhật thường"
                        android:textColor="#FF000000"
                        android:textSize="13dp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>